<resources>
    <!-- Base application theme. -->
    <style name="Theme.Platform" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="background">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorError">@color/ErrorColor</item>
    </style>


    <style name="Font_style">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="library_collections_image_style" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="drawer_style" parent="@style/Widget.Material3.NavigationView">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="drawer_corners_shape" parent="">
        <item name="cornerSize">15%</item>
    </style>
    <!--        login text-->

    <style name="SignActivity_login_text">
        <item name="fontFamily">Nunito</item>
        <item name="lineHeight">82sp</item>
