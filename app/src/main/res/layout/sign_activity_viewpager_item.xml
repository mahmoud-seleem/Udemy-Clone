<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SignActivity_viewPager_itemsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageOnBoarding"
        android:layout_width="436dp"
        android:layout_height="326dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="189dp"
        android:contentDescription="@string/SignActivity_on_boarding_screens_are_shown" />


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="436dp"
        android:layout_height="79dp"
        android:padding="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="120dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageOnBoarding"
        style="@style/onBoarding_title" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="436dp"
        android:layout_height="79dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="120dp"
        android:textAlignment="center"
        android:layout_below="@id/txtTitle"
        style="@style/onBoarding_description" />


</RelativeLayout>